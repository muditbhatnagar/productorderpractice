<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>S.No.</th>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each_with_index do |product,index| %>
      <tr>
        <td><%= index + 1 %>.</td>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class:"btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class:"btn btn-primary btn-sm" %> | 
<%= link_to 'Back', root_path, class:"btn btn-success btn-sm" %>
