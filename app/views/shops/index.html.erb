<p id="notice"><%= notice %></p>

<h1>Shops</h1>

<table>
  <thead>
    <tr>
      <th>S.No.</th>
      <th>Shops</th>
     <!--  <th>Product name</th>
      <th>Quantity</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each_with_index do |shop,index| %>
      <tr>
        <td><%= index + 1 %>.</td>
        <td><%= shop.name %></td>
        <td><%#= shop.product_id %></td>
        <td><%#= shop.product_name %></td>
        <td><%#= shop.quantity %></td>
        <td><%= link_to 'Show', shop, class:"btn btn-info btn-sm" %> | </td> 
        <td><%= link_to 'Edit', edit_shop_path(shop), class:"btn btn-primary btn-sm" %> | </td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

